@using Microsoft.AspNetCore.Components.Web
@using TEKO.Testing.UseCases.Persons
@inherits LayoutComponentBase
@inject NavigationManager Nav

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Add" Color="Color.Inherit" Edge="Edge.End" OnClick="@(() => AddPersons())" />
            
        
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" Width="300px">
        <MudDrawerHeader />
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;
    PersonDTO Person = new PersonDTO(1001, "", "", "", 0,0);
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void AddPersons()
    {
        StateHasChanged();
        Nav.NavigateTo($"/persons/add");
    }
}
